.container.mt-5
  .col-sm-12.col-md-6.offset-md-3.col-lg-4.offset-lg-4
    .card
      .card-body
        %h2.card-title Create an account

        - if params[:error]
          %h5.text-danger= params[:error]

        %form{action: '/auth/sign_up', method: :post}
          = haml :user_fields

          %hr

          %button.btn.btn-block.btn-primary Create my account

        %hr

        .text-right.mt-2
          Already have an account?
          %a.btn.btn-link{href: '/auth/sign_in'} Sign in